@model IEnumerable<FacebookIntegration.Models.UserAlbum>
@{
    ViewBag.Title = "Albums";
}

<h1 style="width: 600px; text-align: center;">Album Details
</h1>

<table style="border: 1px solid; padding: 10px; width: 600px; margin: 30px;">
    <tr style="text-align: left; height: 30px;">
        <th>Album Name
        </th>
        <th>Date of Creation
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="height: 20px;">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
        </tr>
    }
</table>

<a href="/User/UserInfo" style="font-weight: bold; font-size: 20px; padding-left: 40px;">Back</a>